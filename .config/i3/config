        focused_workspace  #222222 #222222 #F17053
        active_workspace   #222222 #5f676a #ffffff
        inactive_workspace #222222 #222222 #888888
        urgent_workspace   #222222 #222222 #00B16A
        binding_mode       #222222 #900000 #ffffff

    }

        strip_workspace_numbers yes
        tray_output HDMI-0
        position top
  	#status_command i3blocks -c ~/.config/i3/i3blocks.conf
        status_command ~/.config/i3/statusline

}


